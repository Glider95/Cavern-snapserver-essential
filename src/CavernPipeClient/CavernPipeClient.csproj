<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Cavern" Version="2.1.0" />
    <PackageReference Include="Cavern.Format" Version="2.1.0" />
  </ItemGroup>

  <!--
    This project requires Cavern NuGet packages.
    Run: dotnet add package Cavern 2.1.0
         dotnet add package Cavern.Format 2.1.0

    OR reference the patched CavernPipeServer.Logic.dll directly:
    <Reference Include="CavernPipeServer.Logic" HintPath="../../bin/CavernPipeServer.Logic.dll" />
  -->

</Project>
